/* pages/index/equipment.wxss */
.main{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f9f9f9;
  position: absolute;
}
.text_view{
  width: 690rpx;
  display: flex;
  height: 70rpx;
  background-color: #FFF6C3;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  color: #FF773B;
  font-size: 28rpx;
  line-height: 28rpx;
  flex-direction: row;
  align-items: center;
}
.content{
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0px 1px 2px 1px rgba(161, 178, 201, 0.3);
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}
.content_text{
  width: 630rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}