/* pages/login/code.wxss */
.main{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  background-color: #f9f9f9;
  height: 100%;
}
.conent{
  width: 630rpx;
  display: flex;
  flex-direction: column;
  font-size: 34rpx;
  line-height: 34rpx;
  font-weight: bold;
}
.input_view{
  border:none;
  margin-top: 80rpx;
  margin-bottom: 30rpx;
}
.content{
  width: 630rpx;
  display: flex;
  border-top: 1rpx solid #f9f9f9;
  flex-direction: column;
  justify-content: center;
}
.button_view{
  width: 630rpx;
  display: flex;
  height: 90rpx;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 45rpx;
  font-weight: bold;
  font-size: 30rpx;
  line-height: 30rpx;
}
.line{
  width: 630rpx;
  height: 1rpx;
  background-color: #EAEAEA;
}