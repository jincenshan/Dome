/* pages/purchase/index.wxss */
.main{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  height: 100%;
  background-color: #f9f9f9;
  z-index: 1;
}
.hread{
  width: 750rpx;
  height: 150rpx;
  display: flex;
  border-bottom-left-radius: 20%;
  border-bottom-right-radius: 20%;
  background-color: #0080ff;
}
button::after{
  border:none;
  padding: none;
  border-radius: none;
}
button{
  border-radius:0;
  padding: none;
  background: none;
}
.content_views{
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  border-radius: 20rpx;
  top: 20rpx;
  position: absolute;
  z-index: 2;
  box-shadow: 0px 1px 2px 1px rgba(161, 178, 201, 0.3);
}
.content_view{
  width: 630rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1rpx solid #EAEAEA;
}
.conten_text{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items:center;
}
.content_view_icon{
  width:200rpx;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.content_icon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.button_buy{
  width: 650rpx;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border-radius: 45rpx;
  background-color: #0080ff;
  color: white;
  font-weight: bold;
  line-height: 90rpx;
  position: relative;
  top: 200rpx;
}