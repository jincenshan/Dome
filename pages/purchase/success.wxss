/* pages/purchase/success.wxss */
.main{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  background-color: #f9f9f9;
  height: 100%;
  z-index: 1;
}
.hread{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 540rpx;
  position: relative;
  background-color: #0080ff;
  border-bottom-left-radius: 8%;
  border-bottom-right-radius: 8%;
}
button::after{
  border:none;
  padding: none;
  border-radius: none;
}
button{
  border-radius:0;
  padding: none;
  background: none;
}
.content_views{
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  border-radius: 20rpx;
  margin-top: 65rpx;
  box-shadow: 0px 1px 2px 1px rgba(161, 178, 201, 0.3);
}
.content_view{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  z-index: 1;
}
.content_views_message{
  width: 630rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background-color: #FFFBE8;
  border-radius: 20rpx;
  color: #FF773B;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  margin-bottom: 40rpx;
  margin-top: 40rpx;
}
.content_views_message_text{
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #FF773B;
  line-height: 48rpx;
  font-weight: bold;
}
.black_net_images{
  width: 670rpx;
  height: 780rpx;
  display: flex;
  position: absolute;
  z-index: -1;
}
.button_buy{
  width: 650rpx;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border-radius: 45rpx;
  background-color: #0080ff;
  color: white;
  font-weight: bold;
  line-height: 90rpx;
  margin-top: 100rpx;
}
.button_buy_home{
  width: 650rpx;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border-radius: 45rpx;
  background-color: white;
  border:1rpx solid #D8D8E2;
  font-weight: bold;
  line-height: 90rpx;
  margin-top: 40rpx;
}
.black_view{
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.2);
  position: absolute;
  z-index: 10;
  top: 0;
  left: 0;
}
.black_view_content{
  width: 690rpx;
  height: 390rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  border-radius: 20rpx;
  position: relative;
}
.black_view_images{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: -100rpx;
}
.black_view_button{
  width: 690rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 70rpx;
}
.black_view_buttons{
  width: 290rpx;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  line-height: 30rpx;
  border-radius: 45rpx;
}
.black_net{
  width: 670rpx;
  height: 780rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  position: relative;
  align-items: center;
}
.black_net_view{
  width: 600rpx;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  /* justify-content: space-between;
  align-items: center; */
  position: relative;
}
.black_net_view_images{
  width: 600rpx;
  height: 300rpx;
  display: flex;
  position: absolute;
  z-index: -1;
}
.black_net_view_left{
  width: 190rpx;
  height: 260rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #FF3B3B;
}
.black_net_view_right{
  width: 390rpx;
  height: 260rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.black_net_colse{
  width:90rpx;
  height: 90rpx;
  margin-top: 100rpx;
}