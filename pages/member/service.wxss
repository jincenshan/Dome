/* pages/member/service.wxss */
.main{
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.hread{
  width: 750rpx;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background: linear-gradient(0deg,#ffffff 0%, #ffffff 100%);
  position: fixed;
  z-index: 10;
  top:0;
  left:0;
}
.hread_view{
  height: 82rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  font-size: 30rpx;
}
.content{
  width: 690rpx;
  display: flex;
  display: flex;
  flex-direction: column;
  margin-top: 100rpx;
}
.content_view{
  width: 690rpx;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.date_text{
  font-size:20rpx;
  font-weight:36rpx;
  margin-left:40rpx;
  margin-top:10rpx;
}
.content_text{
  font-size: 24rpx;
  font-weight: bold;
  line-height: 51rpx;
  margin-left: 30rpx;
}
.content_view_left{
  width:208rpx;
  height: 146rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-weight: bold;
}
.content_view_right{
  width: 480rpx;
  height: 146rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.line{
  width: 100rpx;
  height: 6rpx;
  border-radius: 50rpx;
  background-color: #0080ff;
}
.no_date{
  width: 600rpx;
  height: 360rpx;
  display: flex;
  margin-top: 50rpx;
}