/* pages/member/invitation_one.wxss */
.main{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  height: 100%;
  align-items: center;
  background-color: #0080FF;
}
.top_view{
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.top_view_bg{
  width: 436rpx;
  height: 240rpx;
  display: flex;
}
.top_view_bg_1{
  width: 690rpx;
  height: 200rpx;
  display: flex;
}
.top_avatarUrl{
  width: 120rpx;
  height: 120rpx;
  display: flex;
  border:6rpx solid white;
  border-radius: 50%;
}
.code_images{
  width: 220rpx;
  height: 220rpx;
  display: flex;
  margin-top: 70rpx;
  margin-bottom: 30rpx;
}
.bottom_view{
  width: 690rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  border-radius: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 120rpx;
}
.bottom_text{
  width: 670rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 70rpx;
  margin-left: 10rpx;
}
.bottom_text_view{
  width: 220rpx;
  height: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  font-weight: 36rpx;
  font-weight: bold;
  color: #424242;
}
.bottom_leaf{
  width: 670rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 50rpx;
}
.bottom_leaf_left{
  width: 110rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  line-height: 28rpx;
  position: relative;
}
.bottom_leaf_left_text{
  position: absolute;
  top: 6rpx;
  right: 20rpx;
}
.bottom_leaf_left_images{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top:-10rpx
}
.bottom_leaf_right{
  width: 488rpx;
  display: flex;
  flex-direction: column;
  font-weight: bold;
  margin-left: 10rpx;
}
.share_button{
  width: 480rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  line-height: 32rpx;
  background-color: #FFD82F;
  color: #BC540E;
  background: linear-gradient(180deg,#ffec6f 0%, #ffcd04 100%);
  border-radius: 40px;
  box-shadow: 0px 2px 0px 1px rgba(255, 187, 3, 1);
  font-weight: bold;
  margin-bottom: 30rpx;
}
button::after{
  border:none;
  padding: none;
  border-radius: none;
}
button{
  border-radius:0;
  padding: none;
  background: none;
}
.button_view{
  width: 750rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  background-color: white;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
}
.button_view_go{
  width: 330rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  line-height: 30rpx;
  border-radius: 40rpx;
  font-weight: bold;
}