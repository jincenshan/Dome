/* pages/member/friends.wxss */
.main{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}
.content{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  position: absolute;
  align-items: center;
  top: 0;
  left: 0;
}
.content_hread{
  width: 690rpx;
  height: 240rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.content_hread_images{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border:6rpx solid white;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.content_hread_view{
  width: 450rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  color: white;
}
.content_view{
  width: 690rpx;
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  background-color: white;
  box-shadow: 0px 1px 2px 1px rgba(161, 178, 201, 0.3);
  margin-bottom: 50rpx;
}
.tabbar{
  width: 690rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: flex-end;
  border-bottom: 1rpx solid #EAEAEA;
}
.tabbar_view{
  width: 230rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  height: 100rpx;
  justify-content: flex-end;
}
.line{
  width: 50rpx;
  height: 6rpx;
  display: flex;
  background-color: #0080FF;
}
.tabbar_contents{
  width: 690rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.tabbar_images{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.tabbar_contents_right{
  width: 500rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}